<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level_0">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="553dp"
        android:layout_height="846dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backg" />

    <Button
        android:id="@+id/submit"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#AF3EF6"
        android:lineSpacingExtra="8sp"
        android:text="Next"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/layout1"
        app:layout_constraintStart_toStartOf="@+id/layout1"
        app:layout_constraintTop_toBottomOf="@+id/layout1" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Level"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Question"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/level"
        app:layout_constraintStart_toStartOf="@+id/level"
        app:layout_constraintTop_toBottomOf="@+id/level" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/questionindex"
        app:layout_constraintStart_toStartOf="@+id/questionindex"
        app:layout_constraintTop_toBottomOf="@+id/questionindex" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="6 + 6 "
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/timer"
        app:layout_constraintStart_toStartOf="@+id/timer"
        app:layout_constraintTop_toBottomOf="@+id/timer" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="@+id/question"
        app:layout_constraintStart_toStartOf="@+id/question"
        app:layout_constraintTop_toBottomOf="@+id/question">


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="0dp"
            app:layout_constraintEnd_toEndOf="@+id/layout1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/layout1"
            app:layout_constraintTop_toTopOf="@+id/layout1">


            <Button
                android:id="@+id/option1"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:backgroundTint="#069AA8"
                android:text="Button"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/option3"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:backgroundTint="#069AA8"
                android:text="Button"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="0dp"
            app:layout_constraintEnd_toEndOf="@+id/layout1"
            app:layout_constraintStart_toEndOf="@+id/layout2"
            app:layout_constraintTop_toTopOf="@+id/layout1">

            <Button
                android:id="@+id/option2"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:backgroundTint="#069AA8"
                android:foregroundGravity="center_horizontal"
                android:text="Button"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/option4"
                android:layout_width="120dp"
                android:layout_height="50dp"

                android:backgroundTint="#069AA8"
                android:text="Button"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>